@if (isValidColorString())
{
    <MudIcon Class="@Class" Icon="@icons[ManaColorString]" Size="Size.Small"></MudIcon>
}

@code {
    [Parameter, EditorRequired()]
    public char ManaColorString { get; set; }

    [Parameter]
    public string Class { get; set; }

    public Color color
    {
        get
        {
            return Color.Primary;
        }
    }

    private bool isValidColorString()
    {
        switch (ManaColorString)
        {
            case 'W': return true;
            case 'U': return true;
            case 'B': return true;
            case 'R': return true;
            case 'G': return true;
            case 'C': return true;
            default: return false;
        }
    }
}


